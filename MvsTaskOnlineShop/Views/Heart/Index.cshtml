@model List<Product>
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-10 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Heart</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="img//products/@item.Image" alt="" style="width: 50px;"> @item.Name</td>
                            <td class="align-middle">$@item.Price</td>
                            <td class="align-middle"><i class="fas fa-heart text-primary"></td>
                            <td class="align-middle"><form asp-controller="Heart" asp-action="RemoveHeart" asp-route-id="@item.Id" method="post"><button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></form></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Cart End -->