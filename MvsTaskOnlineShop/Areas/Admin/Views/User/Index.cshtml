@model List<UserVM>
@{
    int count = 1;
}
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Users</h4>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>FullName</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@item.User.FullName</td>
                                    <td>@item.User.Email</td>
                                    <td>@item.User.UserName</td>
                                    <td>@item.Roles.FirstOrDefault()</td>
                                    <td>
                                        @if (@item.Roles.FirstOrDefault() == "Admin")
                                        {
                                            <form method="post" class="d-inline ms-2" asp-action="MakeMember" asp-route-email="@item.User.Email"><button class="btn btn-secondary">Disable</button></form>
                                        }
                                        else
                                        {
                                            <form method="post" class="d-inline ms-2" asp-action="MakeAdmin" asp-route-email="@item.User.Email"><button class="btn btn-success">Active</button></form>
                                        }
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>