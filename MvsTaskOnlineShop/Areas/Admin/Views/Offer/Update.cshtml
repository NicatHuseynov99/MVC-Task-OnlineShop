@model Offer
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update</h4>
                <form method="post" asp-action="Update" asp-route-id="@Model.Id" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="exampleInputUsername1">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="exampleInputUsername1" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">Description</label>
                        <input asp-for="Description" type="text" class="form-control" id="exampleInputUsername1" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="d-flex">
                        <img src="~/img/offers/@Model.Image" style="height:60px; border-radius: 50%;" />
                        <div class="form-group ms-3">
                            <label>Image upload</label>
                            <input asp-for="Photo" class="form-control" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>